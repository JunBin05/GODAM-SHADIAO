import React, { useState, useEffect } from 'react';
import { useNavigate } from 'react-router-dom';
import { ArrowLeft, CheckCircle, Edit2, Send, AlertCircle } from 'lucide-react';
import { useLanguage } from '../context/LanguageContext';
import { useSTRApplication } from '../hooks/useAPI';
import LanguageToggle from '../components/LanguageToggle';

// STR Application Page - Regular Form
// Your teammate will integrate AI voice assistant later
// This provides the form structure and backend integration

const STRApplyPage = () => {
  const navigate = useNavigate();
  const { t, currentLanguage } = useLanguage();
  const [mode, setMode] = useState('form'); // 'form' | 'review' | 'success'
  
  // Form data matching backend STRApplicationRequest model
  const [formData, setFormData] = useState({
    applicant: {
      ic_number: '',
      name: '',
      income: 0,
      marital_status: 'single' // single | married | divorced | widowed
    },
    spouse: null, // Only if married: { ic_number, name }
    children: [], // Array of { ic_number, name }
    guardian: {
      name: '',
      ic_number: '',
      relationship: ''
    }
  });
  
  // Question flow state
  // Form step state
  const [currentStep, setCurrentStep] = useState(1); // Steps 1-6
  const [childrenCount, setChildrenCount] = useState(0);
  
  // API integration
  const { 
    submitApplication, 
    submitting, 
    submitError,
    validateData,
    validating 
  } = useSTRApplication(currentLanguage);
  
  const [applicationResult, setApplicationResult] = useState(null);

  // Handle children count change
  useEffect(() => {
    if (childrenCount > 0) {
      const childArray = Array(Math.min(childrenCount, 5)).fill(null).map(() => ({ 
        ic_number: '', 
        name: '' 
      }));
      setFormData(prev => ({ ...prev, children: childArray }));
    } else {
      setFormData(prev => ({ ...prev, children: [] }));
    }
  }, [childrenCount]);

  // Handle form field changes
  const handleInputChange = (section, field, value) => {
    setFormData(prev => ({
      ...prev,
      [section]: {
        ...prev[section],
        [field]: value
      }
    }));
  };

  const handleChildChange = (index, field, value) => {
    setFormData(prev => ({
      ...prev,
      children: prev.children.map((child, i) => 
        i === index ? { ...child, [field]: value } : child
      )
    }));
  };

  // Navigate between steps
  const nextStep = () => {
    if (currentStep < 6) setCurrentStep(currentStep + 1);
    if (currentStep === 6) setMode('review');
  };

  const prevStep = () => {
    if (currentStep > 1) setCurrentStep(currentStep - 1);
  };

  // Handle form submission
  const handleSubmit = async () => {
    try {
      // Validate before submission
      const validation = await validateData(formData);
      if (!validation.valid) {
        speak(`Validation error: ${validation.errors.join(', ')}`);
        return;
      }

      // Submit to backend
      const result = await submitApplication(formData);
      setApplicationResult(result);
      setMode('success');
      speak('Application submitted successfully! Here are your next steps.');
    } catch (err) {
      console.error('Submission error:', err);
      console.error('Submission error:', err);
    }
  };

  // Render review/confirmation mode
  const renderReviewMode = () => (
    <div style={{ width: '100%', maxWidth: '700px', margin: '0 auto' }}>
      <h2 style={{ fontSize: '2rem', color: '#1f2937', marginBottom: '30px', textAlign: 'center' }}>
        Review Your Application
      </h2>

      {/* Applicant Info */}
      <div style={{ backgroundColor: 'white', padding: '25px', borderRadius: '15px', marginBottom: '20px', boxShadow: '0 2px 10px rgba(0,0,0,0.05)' }}>
        <h3 style={{ color: 'var(--primary-color)', marginBottom: '20px', display: 'flex', alignItems: 'center', gap: '10px' }}>
          <span>Step 1: Applicant Information</span>
          <button onClick={() => setEditingField('applicant')} style={{ marginLeft: 'auto', background: 'none', border: 'none', cursor: 'pointer' }}>
            <Edit2 size={20} color="#6b7280" />
          </button>
        </h3>
        <div style={{ display: 'grid', gap: '15px' }}>
          <div><strong>Name:</strong> {formData.applicant.name}</div>
          <div><strong>IC Number:</strong> {formData.applicant.ic_number}</div>
          <div><strong>Monthly Income:</strong> RM {formData.applicant.income}</div>
          <div><strong>Marital Status:</strong> {formData.applicant.marital_status}</div>
        </div>
      </div>

      {/* Spouse Info */}
      {formData.spouse && (
        <div style={{ backgroundColor: 'white', padding: '25px', borderRadius: '15px', marginBottom: '20px', boxShadow: '0 2px 10px rgba(0,0,0,0.05)' }}>
          <h3 style={{ color: 'var(--primary-color)', marginBottom: '20px' }}>Step 2: Spouse Information</h3>
          <div style={{ display: 'grid', gap: '15px' }}>
            <div><strong>Name:</strong> {formData.spouse.name}</div>
            <div><strong>IC Number:</strong> {formData.spouse.ic_number}</div>
          </div>
        </div>
      )}

      {/* Children Info */}
      {formData.children.length > 0 && (
        <div style={{ backgroundColor: 'white', padding: '25px', borderRadius: '15px', marginBottom: '20px', boxShadow: '0 2px 10px rgba(0,0,0,0.05)' }}>
          <h3 style={{ color: 'var(--primary-color)', marginBottom: '20px' }}>Step 3: Children ({formData.children.length})</h3>
          {formData.children.map((child, idx) => (
            <div key={idx} style={{ padding: '10px', backgroundColor: '#f9fafb', borderRadius: '8px', marginBottom: '10px' }}>
              <div><strong>Child {idx + 1}:</strong> {child.name || 'Not specified'}</div>
              <div style={{ fontSize: '0.9rem', color: '#6b7280' }}>IC: {child.ic_number || 'Not specified'}</div>
            </div>
          ))}
        </div>
      )}

      {/* Guardian Info */}
      {formData.guardian.name && (
        <div style={{ backgroundColor: 'white', padding: '25px', borderRadius: '15px', marginBottom: '20px', boxShadow: '0 2px 10px rgba(0,0,0,0.05)' }}>
          <h3 style={{ color: 'var(--primary-color)', marginBottom: '20px' }}>Step 5: Guardian Information</h3>
          <div style={{ display: 'grid', gap: '15px' }}>
            <div><strong>Name:</strong> {formData.guardian.name}</div>
            <div><strong>IC Number:</strong> {formData.guardian.ic_number}</div>
            <div><strong>Relationship:</strong> {formData.guardian.relationship}</div>
          </div>
  // Render form mode (multi-step form)
  const renderFormMode = () => {
    const progress = (currentStep / 6) * 100;

    return (
      <div style={{ width: '100%', maxWidth: '700px', margin: '0 auto' }}>
        {/* Progress Bar */}
        <div style={{ marginBottom: '30px' }}>
          <div style={{ display: 'flex', justifyContent: 'space-between', marginBottom: '10px' }}>
            <span style={{ fontSize: '0.9rem', color: '#6b7280' }}>Step {currentStep} of 6</span>
            <span style={{ fontSize: '0.9rem', color: '#6b7280' }}>{Math.round(progress)}%</span>
          </div>
          <div style={{ width: '100%', height: '8px', backgroundColor: '#e5e7eb', borderRadius: '10px', overflow: 'hidden' }}>
            <div style={{ width: `${progress}%`, height: '100%', backgroundColor: 'var(--primary-color)', transition: 'width 0.3s' }}></div>
          </div>
        </div>

        {/* Step Content */}
        <div style={{ backgroundColor: 'white', padding: '30px', borderRadius: '15px', marginBottom: '20px', boxShadow: '0 2px 10px rgba(0,0,0,0.05)' }}>
          {currentStep === 1 && (
            <>
              <h2 style={{ color: 'var(--primary-color)', marginBottom: '20px' }}>Step 1: Applicant Information</h2>
              <div style={{ display: 'grid', gap: '15px' }}>
                <input
                  type="text"
                  placeholder="Full Name"
                  value={formData.applicant.name}
                  onChange={(e) => handleInputChange('applicant', 'name', e.target.value)}
                  style={{ padding: '12px', borderRadius: '8px', border: '1px solid #d1d5db', fontSize: '1rem' }}
                />
                <input
                  type="text"
                  placeholder="IC Number (e.g., 800101-14-1234)"
                  value={formData.applicant.ic_number}
                  onChange={(e) => handleInputChange('applicant', 'ic_number', e.target.value)}
                  style={{ padding: '12px', borderRadius: '8px', border: '1px solid #d1d5db', fontSize: '1rem' }}
                />
                <input
                  type="number"
                  placeholder="Monthly Income (RM)"
                  value={formData.applicant.income}
                  onChange={(e) => handleInputChange('applicant', 'income', parseInt(e.target.value) || 0)}
                  style={{ padding: '12px', borderRadius: '8px', border: '1px solid #d1d5db', fontSize: '1rem' }}
                />
                <select
                  value={formData.applicant.marital_status}
                  onChange={(e) => handleInputChange('applicant', 'marital_status', e.target.value)}
                  style={{ padding: '12px', borderRadius: '8px', border: '1px solid #d1d5db', fontSize: '1rem' }}
                >
                  <option value="single">Single</option>
                  <option value="married">Married</option>
                  <option value="divorced">Divorced</option>
                  <option value="widowed">Widowed</option>
                </select>
              </div>
            </>
          )}

          {currentStep === 2 && formData.applicant.marital_status === 'married' && (
            <>
              <h2 style={{ color: 'var(--primary-color)', marginBottom: '20px' }}>Step 2: Spouse Information</h2>
              <div style={{ display: 'grid', gap: '15px' }}>
                <input
                  type="text"
                  placeholder="Spouse Full Name"
                  value={formData.spouse?.name || ''}
                  onChange={(e) => setFormData(prev => ({ ...prev, spouse: { ...prev.spouse, name: e.target.value } }))}
                  style={{ padding: '12px', borderRadius: '8px', border: '1px solid #d1d5db', fontSize: '1rem' }}
                />
                <input
                  type="text"
                  placeholder="Spouse IC Number"
                  value={formData.spouse?.ic_number || ''}
                  onChange={(e) => setFormData(prev => ({ ...prev, spouse: { ...prev.spouse, ic_number: e.target.value } }))}
                  style={{ padding: '12px', borderRadius: '8px', border: '1px solid #d1d5db', fontSize: '1rem' }}
                />
              </div>
            </>
          )}

          {currentStep === 2 && formData.applicant.marital_status !== 'married' && (
            <div style={{ textAlign: 'center', padding: '40px', color: '#6b7280' }}>
              <p>No spouse information required (not married)</p>
            </div>
          )}

          {currentStep === 3 && (
            <>
              <h2 style={{ color: 'var(--primary-color)', marginBottom: '20px' }}>Step 3: Children Information</h2>
              <input
                type="number"
                placeholder="Number of Children (max 5)"
                value={childrenCount}
                onChange={(e) => setChildrenCount(Math.min(parseInt(e.target.value) || 0, 5))}
                max="5"
                style={{ padding: '12px', borderRadius: '8px', border: '1px solid #d1d5db', fontSize: '1rem', width: '100%', marginBottom: '20px' }}
              />
              {formData.children.map((child, index) => (
                <div key={index} style={{ padding: '15px', backgroundColor: '#f9fafb', borderRadius: '8px', marginBottom: '15px' }}>
                  <h4 style={{ marginTop: 0 }}>Child {index + 1}</h4>
                  <div style={{ display: 'grid', gap: '10px' }}>
                    <input
                      type="text"
                      placeholder="Child Name"
                      value={child.name}
                      onChange={(e) => handleChildChange(index, 'name', e.target.value)}
                      style={{ padding: '10px', borderRadius: '6px', border: '1px solid #d1d5db', fontSize: '0.95rem' }}
                    />
                    <input
                      type="text"
                      placeholder="Child IC Number"
                      value={child.ic_number}
                      onChange={(e) => handleChildChange(index, 'ic_number', e.target.value)}
                      style={{ padding: '10px', borderRadius: '6px', border: '1px solid #d1d5db', fontSize: '0.95rem' }}
                    />
                  </div>
                </div>
              ))}
            </>
          )}

          {currentStep === 4 && (
            <>
              <h2 style={{ color: 'var(--primary-color)', marginBottom: '20px' }}>Step 4: Document Checklist</h2>
              <p style={{ color: '#6b7280', marginBottom: '15px' }}>
                Please prepare these documents (you'll upload them at the government portal later):
              </p>
              <ul style={{ paddingLeft: '20px', lineHeight: '1.8', color: '#374151' }}>
                <li>IC copy (Front & Back)</li>
                {formData.applicant.marital_status === 'married' && <li>Marriage certificate</li>}
                {formData.applicant.marital_status === 'divorced' && <li>Divorce certificate</li>}
                {formData.applicant.marital_status === 'widowed' && <li>Death certificate of spouse</li>}
                {formData.children.length > 0 && <li>Children birth certificates</li>}
                <li>Bank statement (latest)</li>
              </ul>
            </>
          )}

          {currentStep === 5 && (
            <>
              <h2 style={{ color: 'var(--primary-color)', marginBottom: '20px' }}>Step 5: Guardian Information (Optional)</h2>
              <div style={{ display: 'grid', gap: '15px' }}>
                <input
                  type="text"
                  placeholder="Guardian Name (leave blank if not applicable)"
                  value={formData.guardian.name}
                  onChange={(e) => handleInputChange('guardian', 'name', e.target.value)}
                  style={{ padding: '12px', borderRadius: '8px', border: '1px solid #d1d5db', fontSize: '1rem' }}
                />
                {formData.guardian.name && (
                  <>
                    <input
                      type="text"
                      placeholder="Guardian IC Number"
                      value={formData.guardian.ic_number}
                      onChange={(e) => handleInputChange('guardian', 'ic_number', e.target.value)}
                      style={{ padding: '12px', borderRadius: '8px', border: '1px solid #d1d5db', fontSize: '1rem' }}
                    />
                    <input
                      type="text"
        <button
          onClick={() => setMode('form')}
          style={{
            flex: 1,
            padding: '15px',
            backgroundColor: '#f3f4f6',
            border: 'none',
            borderRadius: '10px',
            fontSize: '1.1rem',
            fontWeight: 'bold',
            cursor: 'pointer',
            color: '#374151'
          }}
        >
          ← Back to Form
        </button>lease review all information carefully before submitting.
              </p>
              <div style={{ backgroundColor: '#f9fafb', padding: '15px', borderRadius: '8px' }}>
                <p><strong>Applicant:</strong> {formData.applicant.name} ({formData.applicant.ic_number})</p>
                <p><strong>Income:</strong> RM {formData.applicant.income}</p>
                <p><strong>Marital Status:</strong> {formData.applicant.marital_status}</p>
                {formData.spouse && <p><strong>Spouse:</strong> {formData.spouse.name}</p>}
                {formData.children.length > 0 && <p><strong>Children:</strong> {formData.children.length}</p>}
              </div>
            </>
          )}
        </div>

        {/* Navigation Buttons */}
        <div style={{ display: 'flex', gap: '15px' }}>
          {currentStep > 1 && (
            <button
              onClick={prevStep}
              style={{
                flex: 1,
                padding: '15px',
                backgroundColor: '#f3f4f6',
                border: 'none',
                borderRadius: '10px',
                fontSize: '1.1rem',
                fontWeight: 'bold',
                cursor: 'pointer',
                color: '#374151'
              }}
            >
              ← Previous
            </button>
          )}
          <button
            onClick={nextStep}
            style={{
              flex: 2,
              padding: '15px',
              backgroundColor: 'var(--primary-color)',
              border: 'none',
              borderRadius: '10px',
              fontSize: '1.1rem',
              fontWeight: 'bold',
              cursor: 'pointer',
              color: 'white'
            }}
          >
            {currentStep === 6 ? 'Review Application →' : 'Next →'}
          </button>
        </div>
      </div>
    );
  };      {applicationResult.required_documents && (
            <div style={{ backgroundColor: 'white', padding: '25px', borderRadius: '15px', marginBottom: '20px', textAlign: 'left' }}>
              <h3 style={{ color: 'var(--primary-color)', marginBottom: '15px' }}>Step 4: Required Documents</h3>
              <ul style={{ paddingLeft: '20px', lineHeight: '1.8' }}>
                {applicationResult.required_documents.map((doc, idx) => (
                  <li key={idx} style={{ fontSize: '1rem', color: '#374151' }}>{doc}</li>
                ))}
              </ul>
            </div>
          )}

          {/* Next Steps */}
          {applicationResult.next_steps && applicationResult.next_steps[currentLanguage] && (
            <div style={{ backgroundColor: 'white', padding: '25px', borderRadius: '15px', marginBottom: '20px', textAlign: 'left' }}>
              <h3 style={{ color: 'var(--primary-color)', marginBottom: '15px' }}>Step 6: Next Steps</h3>
              <ol style={{ paddingLeft: '20px', lineHeight: '1.8' }}>
                {applicationResult.next_steps[currentLanguage].slice(0, 5).map((step, idx) => (
                  <li key={idx} style={{ fontSize: '1rem', color: '#374151', marginBottom: '10px' }}>{step}</li>
                ))}
              </ol>
            </div>
          )}

          {/* Go to Portal Button */}
          {applicationResult.portal_url && (
            <a
              href={applicationResult.portal_url}
              target="_blank"
              rel="noopener noreferrer"
              style={{
                display: 'inline-block',
                padding: '18px 40px',
                backgroundColor: '#2563eb',
                color: 'white',
                textDecoration: 'none',
                borderRadius: '10px',
                fontSize: '1.2rem',
                fontWeight: 'bold',
                marginTop: '20px'
              }}
            >
              Go to MySTR Portal →
            </a>
          )}
        </>
      )}

      <button
        onClick={() => navigate('/str')}
        style={{
          marginTop: '30px',
          padding: '15px 30px',
          backgroundColor: '#f3f4f6',
          border: 'none',
          borderRadius: '10px',
          fontSize: '1rem',
          cursor: 'pointer',
          color: '#374151'
        }}
      >
        Back to STR Status
      </button>
    </div>
  );

  return (
    <div className="page-container" style={{ display: 'flex', flexDirection: 'column', minHeight: '100vh' }}>
      {/* Header */}
      <header className="landing-header" style={{ flexShrink: 0 }}>
        <div style={{ display: 'flex', alignItems: 'center', gap: '15px' }}>
          <button 
            onClick={() => navigate('/str')} 
            style={{ 
              background: 'none', 
              border: 'none', 
              cursor: 'pointer', 
              color: 'var(--primary-color)',
              display: 'flex',
              alignItems: 'center'
            }}
          >
            <ArrowLeft size={32} />
          </button>
          <div className="logo-placeholder">Apply for STR</div>
        </div>
        <LanguageToggle />
      </header>

      {/* Main Content */}
      <main className="page-content" style={{ flexGrow: 1, paddingTop: '40px', paddingBottom: '40px' }}>
        {mode === 'voice' && renderVoiceMode()}
        {mode === 'review' && renderReviewMode()}
        {mode === 'success' && renderSuccessMode()}
